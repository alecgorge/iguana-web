// http://getbootstrap.com/getting-started/#support-ie10-width
@-ms-viewport       { width: device-width; }

/* Space out content a bit */
body
  padding-top 20px 
  padding-bottom 20px 

/* Everything but the jumbotron gets side spacing for mobile first views */
.header,
.marketing,
.footer
  padding-right 15px 
  padding-left 15px 

/* Custom page header */
.header
  padding-bottom 0px 
  margin 0px

/* Make the masthead heading the same height as the navigation */
  h3
    margin-top 0 
    margin-bottom 0 
    line-height 36px
    
    #logo
      margin-left 15px
  
  .status
    border 1px solid #e5e5e5
    border-width 1px 0
    margin 20px 0 0 0
    padding 10px 15px

section#content
  margin 30px 0
  
.center
  text-align center

.spaced
  margin-bottom 7px

/* Custom page footer */
.footer
  padding-top 19px 
  color #777 
  border-top 1px solid #e5e5e5
  text-align center

/* Customize container */
@media (min-width 860px) {
  .container {
    max-width 860px
  } 
  
  .container-narrow > hr {
  	margin 30px 0 
  }
}

/* Main marketing message and sign up button */
.jumbotron
  text-align center 
  border-bottom 1px solid #e5e5e5 

  .btn
    padding 14px 24px 
    font-size 21px 

/* Supporting marketing content */
.marketing
  margin 40px 0 

  p + h4
   margin-top 28px 

/* Responsive Portrait tablets and up */
@media screen and (min-width 768px) {
  /* Remove the padding we set earlier */
  .header,
  .marketing,
  .footer {
    padding-right 0 
    padding-left 0
  } 
  
  /* Space out the masthead */
  .header {
    margin-bottom 30px
  } 
  
  /* Remove the bottom border on the jumbotron for visual effect */
  .jumbotron {
    border-bottom 0
  } 
}